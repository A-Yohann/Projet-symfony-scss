{% extends 'base.html.twig' %}

{% block title %}{{ horloge.nom }}{% endblock %}

{% block body %}
<div class="horloge-detail-container">
    <div class="horloge-detail-wrapper">
        <a href="{{ path('app_gallery') }}" class="btn-retour">← Retour à la galerie</a>
        
        <div class="horloge-detail-content">
            <div class="horloge-detail-image">
                {% if horloge.image %}
                    <img src="{{ asset('uploads/' ~ horloge.image) }}" alt="{{ horloge.nom }}">
                {% else %}
                    <div class="no-image">
                        <span>Aucune image disponible</span>
                    </div>
                {% endif %}
            </div>
            
            <div class="horloge-detail-info">
                <h1>{{ horloge.nom }}</h1>
                
                {% if horloge.description %}
                    <div class="description-section">
                        <h2>Description</h2>
                        <p>{{ horloge.description }}</p>
                    </div>
                {% endif %}
                
                {# Section Mécanisme #}
                {% if horloge.mecanisme %}
                    <div class="mecanisme-section">
                        <h2>Mécanisme</h2>
                        <p><strong>Type :</strong> {{ horloge.mecanisme.nom }}</p>
                        <p><strong>Complexité :</strong> {{ horloge.mecanisme.complexite }}</p>
                    </div>
                {% endif %}
                
                {% if horloge.user %}
                    <div class="owner-info">
                        <p><strong>Ajouté par :</strong> {{ horloge.user.email }}</p>
                    </div>
                {% endif %}
                
                {% if horloge.user == app.user %}
                    <div class="action-buttons">
                        <a href="{{ path('categorie_horloge_edit', {id: horloge.id}) }}" class="btn btn-warning">Modifier</a>
                        <form method="post" action="{{ path('categorie_horloge_delete', {id: horloge.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette horloge ?');">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ horloge.id) }}">
                            <button type="submit" class="btn btn-danger">Supprimer</button>
                        </form>
                    </div>
                {% endif %}

                {# Section commentaires #}
                <div class="comments-section">
                    <h2>Commentaires ({{ horloge.comments|length }})</h2>
                    
                    {# Messages flash #}
                    {% for message in app.flashes('success') %}
                        <div class="alert alert-success">
                            {{ message }}
                        </div>
                    {% endfor %}
                    
                    {# Afficher les commentaires existants #}
                    {% if horloge.comments|length > 0 %}
                        <div class="comments-list">
                            {% for comment in horloge.comments %}
                                <div class="comment-item">
                                    <div class="comment-header">
                                        <strong>{{ comment.author }}</strong>
                                        <span class="comment-date">{{ comment.creatAt|date('d/m/Y à H:i') }}</span>
                                    </div>
                                    <div class="comment-content">
                                        {{ comment.content }}
                                    </div>
                                </div>
                            {% endfor %}
                        </div>
                    {% else %}
                        <p>Aucun commentaire pour le moment. Soyez le premier à commenter !</p>
                    {% endif %}
                    
                    {# Formulaire d'ajout de commentaire #}
                    <div class="comment-form-wrapper">
                        <h3>Ajouter un commentaire</h3>
                        <form method="post" class="comment-form">
                            <div class="form-group">
                                <label for="author">Votre nom</label>
                                <input 
                                    type="text" 
                                    id="author" 
                                    name="author" 
                                    required 
                                    placeholder="Entrez votre nom"
                                >
                            </div>
                            
                            <div class="form-group">
                                <label for="content">Commentaire</label>
                                <textarea 
                                    id="content" 
                                    name="content" 
                                    rows="4" 
                                    required 
                                    placeholder="Écrivez votre commentaire..."
                                ></textarea>
                            </div>
                            
                            <button type="submit" class="btn btn-adhesion">Publier le commentaire</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}