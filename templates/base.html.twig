<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <title>{% block title %}LE CERCLE DES COLLECTIONNEURS PASSIONNÉS{% endblock %}</title>
    {% block stylesheets %}
        {{ encore_entry_link_tags('app') }}
    {% endblock %}
</head>
<body>
    <div>
        <div class="hero-overlay">
            <nav class="main-navigation">
                <a href="{{ path('app_home') }}" class="nav-link">Accueil</a>
                <a href="{{ path('app_gallery')}}" class="nav-link">Galerie</a>
                <a href="{{ path('app_contact')}}" class="nav-link">Contact</a>

                {% if is_granted('ROLE_ADMIN') %}
                    <a href="{{ path('admin') }}" class="nav-link">Admin</a>
                {% endif %}

                {% if app.user %}
                    <span class="nav-link">Bonjour, {{ app.user.userIdentifier }}</span>
                    <a href="{{ path('app_logout') }}" class="nav-link">Se déconnecter</a>
                {% else %}
                    <a href="{{ path('app_register') }}" class="nav-link">Inscription</a>
                    <a href="{{ path('app_login') }}" class="nav-link">Connexion</a>
                {% endif %}
            </nav>
        </div>
    </div>

<main>
    {% block body %}{% endblock %}
</main>

{% block javascripts %}
    {{ encore_entry_script_tags('app') }}
{% endblock %}
</body>
</html>
